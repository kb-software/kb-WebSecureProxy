<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <xsl:call-template name="html-header"/>
    <meta name="robots" content="noindex, nofollow">
</head>
<body>
    <div id="page-outer" class="fixed-page simple">
        <xsl:call-template name="header"/>
		<div id="page-area">
			<!-- page content -->
            <a id="logo"> 
                <xsl:attribute name="href"><xsl:value-of select="user/welcomesite"/></xsl:attribute>
                <xsl:attribute name="title"><xsl:value-of select="lang/html/all/btn-home"/></xsl:attribute>
            </a>
            <div id="page-inner">
                <!--message box -->
                <xsl:value-of select="lang/html/error/error"/> - <b> <xsl:value-of select="user/message"/></b>
                <br/>
                <br/>
                <xsl:if test="error/show-back">
                   <a href="javascript:history.back()"><xsl:value-of select="lang/html/error/back"/></a>
                   <br/><br/>
                </xsl:if>
                <!-- content end -->
            </div>
		</div>
        <div id="footer" class="small">
            <!-- server info -->
            <xsl:value-of select="rdvpn/wsp/name"/><br/>
            <xsl:value-of select="rdvpn/iws/name"/> - <xsl:value-of select="rdvpn/iws/version"/> - <xsl:value-of select="rdvpn/iws/architecture"/> - <xsl:value-of select="rdvpn/iws/date"/><br/>
            <xsl:value-of select="rdvpn/iws/host"/>
        </div>
    </div>
</body>
</html>

<xsl:include href="/public/template_header.hsl" />
