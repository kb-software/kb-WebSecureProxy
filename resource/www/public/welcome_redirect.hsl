<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.1//EN" "http://www.w3.org/TR/xhtml11/DTD/xhtml11.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <xsl:call-template name="html-header"/>
    <meta name="robots" content="noindex, nofollow">
    <meta http-equiv="refresh"> 
        <xsl:attribute name="content">0; url=<xsl:value-of select="user/welcomesite"/></xsl:attribute>
        <!-- Automatic redirect -->
    </meta>
    <xsl:call-template name="redirect-embedded"/>
</head>
<body>
    <div id="page-outer" class="fixed-page simple">
        <xsl:call-template name="header"/>
		<div id="page-area">
			<!-- page content -->
            <div id="logo"></div>
            <div id="page-inner">
                <xsl:value-of select="lang/html/welcome/return-to-welcome"/>
                <br/>
                <a id="home-button">
                    <xsl:attribute name="href"><xsl:value-of select="user/welcomesite"/></xsl:attribute>
                    <xsl:attribute name="title"><xsl:value-of select="lang/html/all/btn-home"/></xsl:attribute>
                    <xsl:value-of select="lang/html/all/btn-home"/>
                </a><br/>
            </div>
		</div>
    </div>
</body>
</html>

<xsl:include href="/public/template_header.hsl" />
